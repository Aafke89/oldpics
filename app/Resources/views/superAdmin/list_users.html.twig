{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-xs-12">
                <h1>Users</h1>

                <table class="table table-striped">
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Admin?</th>
                    </tr>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>
                                {% if "ROLE_ADMIN" in user.roles|keys %}
                                    yes!
                                {% else %}
                                    no!
                                {% endif %}
                                <a href="{{ path('superadmin', {'user': user.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil">edit</span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}