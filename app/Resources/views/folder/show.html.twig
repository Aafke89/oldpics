{% extends 'base.html.twig' %}
{% block body %}
   <div class="text-center">
      <h1>{{ folder.title }}</h1>
      <h3>{{ folder.description }}</h3>
      <div class="container">
         <div class="row">
            {% for photo in photos %}
               <div class="col-xs-4 col-sm-3 col-md-2">
                  <div class="preview-photo" >
                     <a href="{{ path('folder_photo_show', {'folderId': folder.id, 'photo': loop.index }) }}">
                        <img src="/uploads/photos/{{ photo.file }}" alt="" height="150px" width="150px" >
                     </a> <br>
                     {{ photo.title }}
                  </div>
               </div>
            {% endfor %}
         </div>
         <a href="{{ path('all_folders') }}" class="menu-folder btn btn-success">Terug naar alle mapjes</a><br><br><br><br>
      </div>


{% endblock %}