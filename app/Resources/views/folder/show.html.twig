{% extends 'base.html.twig' %}
{% block body %}
   <div class="text-center">
      <h1>{{ folder.title }}</h1>
      <h3>{{ folder.description }}</h3>
      <div class="container">
         <div class="row">
            {% for photo in folder.photos %}
               <div class="col-md-2 col-xs-3">
                  <div class="preview-photo" >
                     <a href="#"><img src="{{ photo.file }}" alt="" height="150px" width="150px" ></a>
                  </div>
               </div>
            {% endfor %}
         </div>
      </div>



   </div>


{% endblock %}