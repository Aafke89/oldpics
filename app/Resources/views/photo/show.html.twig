{% extends 'base.html.twig' %}
{% block body %}

    <div class="text-center">
    <h1>{{ folder.title }}</h1>
    <h3>{{ folder.description }}</h3>
    <div class="container">
        <div class="row">
            {% for photo in photos %}
                <div class="col-xs-10">
                    <div class="photo" >
                        <img src="/uploads/photos/{{ photo.file }}" alt="" >
                    </div>
                    <b>{{ photo.title }}</b>
                    <p>{{ photo.description }}</p>
                </div>
            {% endfor %}
        </div>
        <div class="navigation text-center">
        {{ knp_pagination_render(photos) }}
        </div>
        <div class="menu-folder">
            <a href="{{ path('folder_show', {'folderId': folder.id }) }}" class="btn btn-warning">Terug naar alle foto's uit deze map</a>
        </div>
    </div>

{% endblock %}