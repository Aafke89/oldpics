{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-sm-10 col-sm-offset-1">
                <div class="content-block">
                    <div class="form">
                        <p>Oeps! Je moet eerst inloggen om dit te kunnen doen.</p>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {{ form_start(form) }}
                        {{ form_row(form._username, {'label': 'Vul hier je naam in:'})  }}
                        {{ form_row(form._password, {'label': 'Vul hier je wachtwoord in'}) }} <br>
                        <button type="submit" class="btn btn-primary">login</button>
                        {{ form_end(form) }} <br>
                        <a href="{{ path('user_register') }}">Ik ben nieuw!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}