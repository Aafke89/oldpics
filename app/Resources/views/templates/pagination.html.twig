{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <div class="pagination">
        {% if first is defined and current != first %}
        <span class="first">
        <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">
        <i class="fa fa-angle-double-left fa-4" aria-hidden="true"></i>
        </a>
        </span>
        {% endif %}

        {% if previous is defined %}
        <span class="previous">
        <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
        <i class="fa fa-angle-left fa-4" aria-hidden="true"></i>
        </a>
        </span>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <span class="page">
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                .
                </a>
            </span>
            {% else %}
                <span class="current">
                   .
                </span>
            {% endif %}

        {% endfor %}

        {% if next is defined %}
            <span class="next">
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                <i class="fa fa-angle-right fa-4" aria-hidden="true"></i>
            </a>
        </span>
        {% endif %}

        {% if last is defined and current != last %}
            <span class="last">
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                <i class="fa fa-angle-double-right"></i>
            </a>
        </span>
        {% endif %}
    </div>
{% endif %}
